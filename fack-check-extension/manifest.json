{
  "manifest_version": 3,
  "name": "Fact Check Extension",
  "version": "1.0.0",
  "description": "Send selected text to local fact-check API and show results.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": ["https://factcheck.thanhpx.work/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Fact Check"
  }
}
